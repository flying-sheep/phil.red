{
	"name": "phil.red",
	"version": "1.0.0",
	"description": "flying-sheepâ€™s blog",
	"private": true,
	"main": "dist/bundle.js",
	"type": "module",
	"repository": "https://github.com/flying-sheep/phil.red.git",
	"author": "Philipp A. <flying-sheep@web.de>",
	"license": "GPL-3.0",
	"scripts": {
		"start": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"bundlesize": "tsc && vite-bundle-visualizer",
		"lint": "$npm_execpath run lint:check && $npm_execpath run lint:deps",
		"lint:ci": "biome ci && $npm_execpath run lint:deps",
		"lint:check": "biome check --write .",
		"lint:deps": "depcheck --ignores=unfonts.css,@fontsource/iosevka,@fontsource/iosevka-aile,@tsconfig/strictest,@total-typescript/ts-reset",
		"deploy": "$npm_execpath run build && rsync --recursive --delete --archive --compress --progress dist/ root@phil.red:/srv/http/phil.red",
		"prepare": "husky"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@dr.pogodin/react-helmet": "^3.0.2",
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.1",
		"@fontsource/iosevka": "^5.2.5",
		"@fontsource/iosevka-aile": "^5.2.5",
		"@matejmazur/react-katex": "^3.1.3",
		"@mui/icons-material": "^7.3.1",
		"@mui/material": "^7.3.1",
		"@mui/system": "^7.0.1",
		"fetch-suspense": "^1.2.2",
		"katex": "^0.16.22",
		"merge-sx": "^3.4.0",
		"notistack": "^3.0.2",
		"plotly.js-basic-dist-min": "^3.0.3",
		"prism-react-renderer": "^2.4.1",
		"prismjs": "^1.30.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-error-boundary": "^6.0.0",
		"react-is": "^19.1.1",
		"react-plotly.js": "^2.6.0",
		"react-portal-target": "^1.0.2",
		"react-router": "^7.8.0",
		"react-slide-routes": "^3.1.0",
		"typed-jsx": "^0.1.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.4",
		"@total-typescript/ts-reset": "^0.6.1",
		"@tsconfig/strictest": "^2.0.5",
		"@types/estree": "^1.0.8",
		"@types/katex": "^0.16.7",
		"@types/markdown-it": "^14.1.2",
		"@types/node": "^24.0.13",
		"@types/plotly.js-basic-dist-min": "^2.12.4",
		"@types/prismjs": "^1.26.5",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@types/react-is": "^19.0.0",
		"@types/react-plotly.js": "^2.6.3",
		"@vitejs/plugin-react": "^4.6.0",
		"depcheck": "^1.4.7",
		"estree-walker": "^3.0.3",
		"globby": "^14.1.0",
		"husky": ">=9.1.7",
		"lint-staged": ">=16.1.5",
		"magic-string": "^0.30.17",
		"markdown-it": "^14.1.0",
		"pyodide": "^0.28.1",
		"react-json-tree": "^0.20.0",
		"rollup": "^4.46.3",
		"typescript": "^5.9.2",
		"unplugin-fonts": "^1.4.0",
		"vite": "^7.0.6",
		"vite-bundle-visualizer": "^1.2.1"
	},
	"packageManager": "yarn@4.9.2",
	"lint-staged": {
		"!(rawPosts)": "biome check --no-errors-on-unmatched --files-ignore-unknown=true --write"
	}
}
