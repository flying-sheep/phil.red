{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Rollup",
            "skipFiles": [
                "<node_internals>/**"
            ],
			"program": "${workspaceFolder}/node_modules/.bin/rollup",
			"args": ["--configPlugin=typescript", "--config=rollup.config.ts"],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}
