{
	"compilerOptions": {
		"module": "ES2015",
		"moduleResolution": "node",
		"target": "ES2017",
		"lib": ["es2017", "dom", "dom.iterable"],
		"jsx": "react",
		//stronger types
		"strict": true,
		"preserveConstEnums": true,
		"noUnusedLocals": true,
		//rollup enforced
		"noEmitHelpers": true,
		"importHelpers": true,
		"noResolve": false,
		//allow importing CJS modules without a namespace in its .d.ts
		"allowSyntheticDefaultImports": true,
		//more
		"removeComments": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*",
		"typings/*.d.ts"
	]
}
